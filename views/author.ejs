                            <div class="p_filled" style="width: 80%;"></div>
                        </div>
                        <div class="p_line">
                            <p class="p_name">PHP</p>
                            <p class="p_perncentage">75%</p>
                        </div>
                        <div class="p_bar">
                            <div class="p_filled" style="width: 75%;"></div>
                        </div>
                        <div class="p_line">
                            <p class="p_name">WordPress</p>
                            <p class="p_perncentage">85%</p>
                        </div>
                        <div class="p_bar">
                            <div class="p_filled" style="width: 85%;"></div>
                        </div>
                    </div>
                        <div class="marginer"></div>    
                        <div class="left-5">
                             <p class="big_P">Extra Skills</p>
                            <ul class="extra_skills">
                                <% user.extra_skills.forEach(function(skill){ %>
                                    <li>
                                        <img src="icon/Icons.svg" class="extra_icon">
                                        <%= skill %>
                                    </li>
                                <% }) %>
                            </ul>
                        <div class="cv-box">
                        <a href="cv.pdf" download class="cv-btn">
                            <span>Download CV</span>
                            <i class="fa fa-download"></i>
                        </a>
                        </div>
                        </div>


                            </div>  
